<view class="page-body">
  <view class="position">
    <text>latitude: {{latitude}}\n</text>
    <text>longitude: {{longitude}}</text>
  </view>
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      show-location
    ></map>
  </view>
  <view class="btn-area">
    <button bindtap="moveToLocation" class="page-body-button" type="primary">移动位置</button>
    <button bindtap="backToLocation" class="page-body-button" type="primary">重置位置</button>
  </view>
</view>
