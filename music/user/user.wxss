.input{
  margin-top: 400rpx;
  height: 300rpx;
  text-align: center;
  font-family: cursive;
  font-size: 100rpx;
  border: outset 20rpx #ff0;
  color: white;
  background-color: green;
}
.nickname{
  text-align: center;
  margin-left: 200rpx;
  font-family: cursive;
  font-size: 80rpx;
  font-weight: bold;
  background: linear-gradient(to right, blue,red);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  z-index: 1;
}
.usermotto{
  margin-top: 100rpx;
  text-align: center;
  font-family: cursive;
  font-size: 50rpx;
  font-weight: bold;
  background: linear-gradient(to right, yellow,green);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  z-index: 1;
}