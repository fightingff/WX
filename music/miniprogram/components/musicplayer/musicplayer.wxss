/* components/musicplayer/musicplayer.wxss */
.song{
  height: 150rpx;
  width: 95%;
  border: outset 20rpx black;
  border-radius: 50rpx;
  position: fixed;
  bottom: 0;
  background-color: white;
  z-index: 100;
}
.poster_pause{
  display: flex;
  float: left;  
  border: solid 10rpx grey;
  border-radius: 100rpx;
  height: 130rpx;
  width: 130rpx;
  background-size: 100%;
  animation: playing 3.5s linear infinite;
  animation-play-state: paused;
}
.poster_play{
  display: flex;
  float: left;  
  border: solid 10rpx grey;
  border-radius: 100rpx;
  height: 130rpx;
  width: 130rpx;
  background-size: 100%;
  animation: playing 3.5s linear infinite;
  animation-play-state: running;
}
@keyframes playing{
  0%{-webkit-transform: rotate(0deg);}
  25%{-webkit-transform: rotate(90deg);}
  50%{-webkit-transform: rotate(180deg);}
  75%{-webkit-transform: rotate(270deg);}
  100%{-webkit-transform: rotate(360deg);}
}
.content{
  font-family: cursive;
  font-size: 50rpx;
  font-weight: bold;
  display: inline-flex;
  margin-top: 30rpx;
  margin-left: 50rpx;
}
.content_man{
  font-family: cursive;
  font-size: 40rpx;
  display: inline-flex;
  margin-top: 20rpx;
  margin-left: -100rpx;
}
.icon{
  display: inline-flex;
  float: right;
  height: 120rpx;
  width: 120rpx;
  background-size: 100%;
  margin-top: 15rpx;
  margin-right: 10rpx;
}