/* components/itemcard/itemcard.wxss */
.music_list1{
  text-align: center;
  font-family: fantasy;
  height: 480rpx;
  border: outset 20rpx #ff0;
}
.artname{
  display: inline-flex;
  float: left;
  font-size: 100rpx;
  font-weight: bold;
  background: linear-gradient(to right, #4a56ff,rgb(60, 255, 0) );
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}
.author{
  display: inline-flex;
  float:right;
  width: 400rpx;
  border-radius: 20rpx;
  border: inset 10rpx white;
}
.song{
  height: 150rpx;
  border: outset 10rpx white;
}
.poster{
  display: flex;
  float: left;
  height: 150rpx;
  width: 150rpx;
  background-size: 100%;
}
.content{
  font-family: cursive;
  font-size: 50rpx;
  font-weight: bold;
  display: inline-flex;
  margin-top: 50rpx;
}