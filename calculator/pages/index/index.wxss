/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #f0f;
  font-size: 100rpx;
}
.userinfo-avatar {
  overflow: hidden;
  width: 256rpx;
  height: 256rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200rpx;
  font-family: cursive;
  font-size: 80rpx;
  font-weight: bold;
  background: linear-gradient(to top right,#1ae8c8, #4a8aff);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}