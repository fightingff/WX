/* pages/calculator/calculator.wxss */
.number{
  display: flex;
  flex-direction: row;
  border-left: inset silver 10px;
  border-right: inset silver 10px;
}
.number button{
  max-width: 150rpx;
  min-height: 130rpx;
  line-height: 130rpx;
  text-align: center;
  font-family: fantasy;
  font-size: 100rpx;
  margin-left: 5rpx;
  margin-top: 5rpx;
  border:outset white 5px;
}
.result{
  text-align: right;
  font-size: 80rpx;
  height: 150rpx;
  background-color: #aff;
  border:inset silver 10px;
}
.num{
  background-color: white;
}
.opt{
  background-color:#0ff;
}
.get{
  background-color: #ff0;
}
.btnHover{
  background-color:red;
  opacity: 0.7;
}
.motto{
  margin-top: 200rpx;
  font-family: cursive;
  text-align: center;
  font-size: 100rpx;
  font-weight: bold;
  background: linear-gradient(to bottom right,#ff0,#0ff);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}